<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.newproduct.springboot.mapper.UserMapper">

    <select id="selectUserByUserName" resultType="com.newproduct.springboot.entity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <update id="updatePassword" parameterType="com.newproduct.springboot.entity.User">
        UPDATE user SET password = #{password}  WHERE id = #{id};
    </update>

</mapper>